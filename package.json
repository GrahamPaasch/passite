{
  "name": "passist",
  "description": "passing siteswap assistant",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "devwidget": "NODE_ENV=development npm run build:api",
    "build": "vite build && npm run build:api",
    "build:causal_diagram_widget": "BUILD_TARGET=causal_diagram_widget vite build -c vite.api.config.js",
    "build:animation_widget": "BUILD_TARGET=animation_widget vite build -c vite.api.config.js",
    "build:api": "npm run build:causal_diagram_widget && npm run build:animation_widget",
    "preview": "vite preview",
    "start": "node bin/server.js",
    "test": "uvu tests",
    "lint": "eslint"
  },
  "dependencies": {
    "express": "^4.18.2",
    "peggy": "^3.0.1",
    "heap-js": "^2.2.0",
    "marked": "^4.2.12",
    "three": "^0.150.0",
    "vite": "^4.1.4"
  },
  "devDependencies": {
    "eslint": "^8.36.0",
    "npm-run-all": "^4.1.5",
    "@rollup/plugin-alias": "^4.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "svelte": "^3.56.0",
    "svelte-dragdroplist": "^1.1.1",
    "@sveltejs/adapter-node": "1.2.2",
    "@sveltejs/kit": "1.11.0",
    "uvu": "^0.5.4"
  }
}
